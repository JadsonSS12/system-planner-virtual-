@model Planner.Models.Tarefa

@{
    ViewData["Title"] = "Detalhes da Tarefa";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>@Model.Titulo</h4>
    <dl class="row">
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>

        <dt class="col-sm-2">Categoria</dt>
        <dd class="col-sm-10">@Model.CategoriaAtividade</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.StatusTarefa</dd>

        <dt class="col-sm-2">Horário de início</dt>
        <dd class="col-sm-10">@Model.Inicio.ToString(@"hh\:mm")</dd>

        <dt class="col-sm-2">Horário de encerramento</dt>
        <dd class="col-sm-10">@Model.Fim.ToString(@"hh\:mm")</dd>

        <dt class="col-sm-2">Dia</dt>
        <dd class="col-sm-10">@Model.Dia.ToShortDateString()</dd>
    </dl>

    <a href="@Url.Action("Editar", new { id = Model.Id })" class="btn btn-warning">Editar</a>
    <a href="@Url.Action("Index")" class="btn btn-primary">Voltar</a>
</div>
